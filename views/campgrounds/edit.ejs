<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = " text-align: center; margin: 25px auto">Edit <%= campground.name %> </h1>
                
        <div  style = "width: 30%; margin: 0 auto">
            
                    <!-- Sending form data to Update Campground -->
            <form action = "/campgrounds/<%=campground._id %>?_method=PUT" method = "POST">
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.name %>" name = "campground[name]">
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.url %>" name = "campground[imageUrl]">
            </div>
             <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.description %>" name = "campground[description]">
            </div>
            <div class = "form-group">
                <input class = "btn btn-lg btn-primary btn-block" type= "submit">
            </div>
        </form>    
        </div>
        
    </div>
</div>

<% include ../partials/footer %>