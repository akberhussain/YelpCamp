<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = " text-align: center; margin: 25px auto">Add comment to <%=campground.name %></h1>
                
        <!--Submitting Form data to "/campgrounds" as a Post Req through Form-->
                
        <div  style = "width: 30%; margin: 0 auto">
            <form action = "/campgrounds/<%= campground._id %>/comments" method = "POST">
            
            <div class = "form-group">
                <input class = "form-control" type = "text" placeholder = "text" name = "text">
            </div>
            

            <div class = "form-group">
                <input class = "btn btn-lg btn-primary btn-block" type= "submit">
            </div>
        </form>    
        </div>
        
    </div>
</div>

