<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = " text-align: center; margin: 25px auto">Edit <%= campground.name %> </h1>
                

        <div  style = "width: 30%; margin: 0 auto">
            <form action = "/campgrounds/<%=campground._id %>?method = PUT" method = "POST">
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.name %>" name = "campground[name]">
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.imageUrl %>" name = "campground[imageUrl]">
            </div>
             <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= campground.description %>" name = "description">
            </div>
            <div class = "form-group">
                <input class = "btn btn-lg btn-primary btn-block" type= "submit">
            </div>
        </form>    
        </div>
        
    </div>
</div>

<% include ../partials/footer %>